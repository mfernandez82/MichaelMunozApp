<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.unidad1.activity.MenuActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tfon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="  Bienvenido "
                android:textColor="#052796" android:shadowColor="#8a6603"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/lb_mUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
 				android:textColor="#0731b8" android:shadowColor="#8a6603"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_vender"
            style="@drawable/p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/p" 
            android:onClick="pasarAvender" />

        <Button
            android:id="@+id/btn_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/b_res" />

        <Button
            android:id="@+id/btn_productos"
            style="@drawable/entrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/entrega" />

        <Button
            android:id="@+id/mantenedor_clientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b_mant"
            android:onClick="pasarAmantenedorclientes" />
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.unidad1.activity.Crear" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="33dp"
        android:orientation="vertical" >
    </LinearLayout>

    <EditText
        android:id="@+id/t_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Nombre" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/t_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/t_nom"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="DirecciÃ³n" />

    <EditText
        android:id="@+id/t_fon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/t_dir"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:hint="Telefono" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:textSize="18dp"
        android:textColor="#0731b8" 
        android:text="   Estado" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/b_guardar"
            android:layout_marginTop="320dp"
            android:layout_width="wrap_content"
            android:background="@drawable/b_guar" 
            android:layout_height="wrap_content"
            android:onClick="pasarAcrear"/>

        <Button
            android:id="@+id/b_limpiar"
             android:layout_marginTop="320dp"
            android:layout_width="wrap_content"
            android:background="@drawable/b_lim" 
            android:layout_height="wrap_content"
            android:onClick="pasarAlimpiar"/>

    </LinearLayout>

</RelativeLayout>
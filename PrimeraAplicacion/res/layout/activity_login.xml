<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/faa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.unidad1.activity.LoginActivity" >

    <EditText
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_contrasena"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:textSize="14dp"
         android:fontFamily="Arial"
         android:gravity="center"
        android:ems="10"
        android:hint="Ingrese Nombre de Usuario" />

    <EditText
        android:id="@+id/txt_contrasena"
        android:fontFamily="Arial"
        android:textSize="14dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ingresar"
        android:layout_alignLeft="@+id/txt_login"
        android:layout_alignRight="@+id/txt_login"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Ingrese ContraseÃ±a"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_ingresar"
        style="@drawable/bingresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_contrasena"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/b_ingresa"
        android:onClick="pasarAmenuPrincipal" />

</RelativeLayout>